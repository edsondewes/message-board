{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Messaging API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-messaging-api",
      "program":
        "${workspaceFolder}/messaging/MessageBoard.Messaging.Api/bin/Debug/netcoreapp2.0/MessageBoard.Messaging.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/messaging/MessageBoard.Messaging.Api",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://*:5000"
      }
    },
    {
      "name": "Launch Ranking API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-ranking-api",
      "program":
        "${workspaceFolder}/ranking/MessageBoard.Ranking.Api/bin/Debug/netcoreapp2.0/MessageBoard.Ranking.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ranking/MessageBoard.Ranking.Api",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://*:5002"
      }
    },
    {
      "name": "Launch Voting API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-voting-api",
      "program":
        "${workspaceFolder}/voting/MessageBoard.Voting.Api/bin/Debug/netcoreapp2.0/MessageBoard.Voting.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/voting/MessageBoard.Voting.Api",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://*:5001"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
